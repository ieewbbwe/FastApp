<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!--左-->
    <ImageView
        android:id="@+id/top_news_iv"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@mipmap/ic_launcher"/>
    <!--中-->
    <LinearLayout
        android:id="@+id/top_news_center_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/top_new_operate_tv"
        android:layout_toRightOf="@id/top_news_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_news_center_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="我是标题！！！！！！"/>

        <TextView
            android:id="@+id/top_news_center_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="我是内容！！！！！！"/>
    </LinearLayout>
    <!--右-->
    <TextView
        android:id="@+id/top_new_operate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:padding="8dp"
        tools:text="操作"/>
</RelativeLayout>